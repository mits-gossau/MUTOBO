@model IEnumerable<Dit.Umb.Mutobo.PageModels.ArticlePage>
<o-highlight-list @(Model.Anchor != string.Empty ? $"id={Model.Anchor}" : "")>
    <h1>Unsere Clubkonzerte</h1>
    @foreach (var highlight in Model)
    {
        <m-highlight href=./baaahh>
            <h5>@highlight.PageTitle</h5>

            @if (!highlight.HideAbstract)
            {
                <p>@highlight.Abstract</p>
            }


            @if (highlight.EmotionImages.Any())
            {
                var image = highlight.EmotionImages.FirstOrDefault();


                @(image?.RenderWcPictureTag())

            }
        </m-highlight>
    }
</o-highlight-list>


